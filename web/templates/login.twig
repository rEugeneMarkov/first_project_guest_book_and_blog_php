{% extends 'base.twig' %}
{% block body%}
<h2>Страница входа и выхода</h2>

{% if username %}
<div>
<form method="post">
    Вы выполнили вход как {{username}}
    <button name="clear_session" type="submit"class="btn btn-info btn-group">Выйти</button>
</form> 
</div>

{% else %}

<div>
    <form action="" method="post">
        <input type="email" name="email_login" placeholder="Введите email" class="form-group">
        <input type="password" name="pass_login" placeholder="Введите пароль" class="form-group">
        <button name="login_button" type="submit"class="btn btn-info btn-group">Войти</button>
    </form> 
</div>
{% endif %}

{% endblock %}