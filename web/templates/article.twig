{% extends 'base.twig' %}
{% block body%}

<h2>Статья</h2>

{% set url = "" %}
{% set article_id = "" %}
{% for item in data %}
<div class="note">
    <p>
        <span class="date">{{ item.date }}</span>
        <span class="name">{{ item.name }}</span>
    </p>
    <p>
        {{ item.content }}
        {% set url = item.url %}
        {% set article_id = item.id %}
    </p>
    
</div>

{% endfor %}
    <p>Комментарии</p>
    <p>
        {{include ('comments.twig')}}
        {#{{include ('pagination.twig')}}#}
    </p>
    <p>
        <div id="form">
            <form action="" method="post">
                <p><textarea type="text" class="form-control" name="comment" placeholder="Ваш комментарий"></textarea></p>
                <p><input name="add_comment_to_article" type="submit" class="btn btn-info btn-block" value="Оставить комментарий"></p>
            </form>
        </div>
    </p>

{% endblock %}