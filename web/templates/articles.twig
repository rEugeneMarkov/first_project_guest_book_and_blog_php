{% extends 'base.twig' %}
{% block body%}

<h2>Статьи</h2>
<a href="/addarticle">Добавить статью</a>
{{include ('pagination.twig')}}

{% for item in data %}
    <div class="note">
        <p>
         <h3>{{ item.header }}</h3>
         <div style="text-align: right;">
         <a href="/articles/{{ item.url }}?aid={{ item.id }}&id=0">Читать</a>
         </div>
        </p>
    </div>
{% endfor %}

{{include ('pagination.twig')}}

{% endblock %}